<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Modal popup styles              		       -->
    <!--                                               -->
    <!--                                               -->

	<dimen name="modalButtonMargin">5dp</dimen>

    <style name="ModalImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">154dp</item>
		<item name="android:paddingTop">20dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>

    <style name="ModalHeaderStyle">
        <item name="fontName">Glegoo-Regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_header_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>
    
    <style name="ModalCaptionStyle">
        <item name="fontName">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_caption_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">14dp</item>
		<item name="android:paddingRight">14dp</item>
	</style>

    <style name="ModalTextStyle">
        <item name="fontName">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ModalButtonContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:gravity">center</item>
	</style>
	
    <style name="ModalButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:background">@drawable/modal_button_primary_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:gravity">center</item>
	</style>

    <style name="ModalButtonSecondaryStyle" parent="ModalButtonStyle">
		<item name="android:background">@drawable/modal_button_secondary_background_selector</item>   
    </style>

    <style name="ModalButtonTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:textAllCaps">true</item>
	</style>

    <style name="ModalHeaderDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/modal_header_divider_color</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="ModalListItemStyle">
        <item name="fontName">Roboto-Regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/modal_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
	</style>
	
</resources>